{
  "name": "orbital-backend",
  "version": "1.0.0",
  "description": "Dedicated backend API for Orbital Lending Protocol",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run migrate:up && node dist/server.js",
    "start:server": "node dist/server.js",
    "start:cron": "node dist/cron.js",
    "dev": "tsx watch src/server.ts",
    "dev:cron": "tsx watch src/cron.ts",
    "migrate": "node src/migrations/runner.js",
    "migrate:up": "node src/migrations/runner.js up",
    "migrate:down": "node src/migrations/runner.js down",
    "migrate:status": "node src/migrations/runner.js status"
  },
  "keywords": [
    "orbital",
    "algorand",
    "defi",
    "lending"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@algorandfoundation/algokit-utils": "^9.1.2",
    "algosdk": "^3.5.2",
    "buffer": "^6.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
